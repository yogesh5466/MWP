<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:background="@drawable/rect"
        android:backgroundTint="#FFFFFF"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="URL"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" android:id="@+id/editText"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="136dp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="324dp"/>
    <Button
        android:text="SCAN"

        android:background="@drawable/rect"
        android:backgroundTint="#FFFFFF"
        android:layout_width="72dp"
        android:layout_height="37dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button" android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"/>




</android.support.constraint.ConstraintLayout>